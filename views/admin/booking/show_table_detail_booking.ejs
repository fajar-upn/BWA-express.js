<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">

    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>

    <div class="card-body">
        <div class="row">

            <div class="col-md-4">
                <img src="https://saber-staycation.herokuapp.com/<%= booking.payment.proofPayment %>" alt="image"
                    style="width:100%; display: block;">
                <div class="row ml-1">
                    <% if(booking.payment.status==='Process' ) {%>
                        <form action="/admin/booking/confirmation/<%= booking.id %>?_method=PUT" method="POST">
                            <!-- delete button -->
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-check"></i>
                                Confirmation
                            </button>
                        </form>
                        <form action="/admin/booking/reject/<%= booking.id %>?_method=PUT" method="POST">
                            <!-- delete button -->
                            <button type="submit" class="btn btn-danger btn-sm ml-2">
                                <i class="fas fa-times"></i>
                                Reject
                            </button>
                        </form>
                        <% } %>
                </div>
            </div>

            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="data-table-activity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Member Name</th>
                                <th>Total Amount</th>
                                <th>Bank Origin</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= booking.memberId.firstName %>
                                        <%= booking.memberId.lastName %>
                                </td>
                                <td>
                                    <%= booking.total %>
                                </td>
                                <td>
                                    <%= booking.payment.bankFrom %>
                                </td>
                                <td>
                                    <%= booking.itemId.title %>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>