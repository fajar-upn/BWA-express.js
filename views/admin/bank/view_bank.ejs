    <!-- javascript library -->
    <%- include('../../partials/js.ejs') %>

        <!-- Modal -->
        <%- include('add_modal.ejs') %>
            <%- include('edit_modal.ejs') %>

                <!-- update data bank value -->
                <script>
                    /**
                     * JQuery find me id='dataTable', 
                     * when data table clicked find me class="button-update".
                     * lastly get data from table_bank.ejs.
                     * 
                     * data('id') will find data-id="" in the table_bank.ejs
                     */
                    $('#dataTable').on('click', '.button-update', function () {
                        let id = $(this).data('id')
                        let bankName = $(this).data('bankname')
                        let accountNumber = $(this).data('accountnumber')
                        let name = $(this).data('name')

                        $('#edit-modal').modal('show')
                        $('.id').val(id)
                        $('.name').val(name)
                        $('.bankName').val(bankName)
                        $('.accountNumber').val(accountNumber)
                    })
                </script>

                <!-- Logout Modal-->
                <%- include('../../partials/logout_modal.ejs') %>
                    <!-- end of modal -->