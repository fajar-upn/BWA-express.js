<!-- Header -->
<%- include('../../partials/header.ejs') %>
    <!-- End of Header -->
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar.ejs') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../partials/navbar.ejs') %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- flash message -->
                            <%- include('../../partials/message.ejs') %>
                                <!-- end of flash message -->

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Item</h1>
                                <!-- End of Heading -->

                                <!-- if action == 'view' in adminController with method viewItem -->
                                <% if(action=='view' ){ %>
                                    <!-- navigation in show_table_item.ejs -->
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item"
                                                role="tab" aria-controls="home" aria-selected="true">Show Item</a>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-item"
                                                role="tab" aria-controls="profile" aria-selected="false">Add
                                                Item</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                        <!-- table content from show_table_item.ejs -->
                                        <%- include('show_table_item') %>
                                            <!-- End of table content -->
                                            <!-- add item -->
                                            <%- include('add_item.ejs') %>
                                                <!-- end of add item -->
                                    </div>
                                    <!-- end of navigation -->

                                    <% } else if(action=="show image" ) { %>
                                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <a class="nav-link active" id="home-tab" data-toggle="tab"
                                                    href="#show-image" role="tab" aria-controls="home"
                                                    aria-selected="true">Show Image</a>
                                            </li>
                                        </ul>
                                        <div class="tab-content" id="myTabContent">
                                            <!-- table image content -->
                                            <%- include('show_image_item.ejs') %>
                                                <!-- end of image -->
                                        </div>
                                        <!-- end of navigation -->
                                        <% } else if(action=="edit" ){ %>
                                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link active" id="home-tab" data-toggle="tab"
                                                        href="#edit-item" role="tab" aria-controls="home"
                                                        aria-selected="true">Update Item</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content" id="myTabContent">
                                                <!-- edit item content -->
                                                <%- include('edit_item.ejs') %>
                                                    <!-- end of edit item -->
                                            </div>
                                            <!-- end of navigation -->
                                            <% } %>
                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../partials/footer.ejs') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- javascript library -->
    <%- include('../../partials/js.ejs') %>

        <!-- include Ckeditor -->
        <script>
            ClassicEditor
                .create(document.querySelector('#about'))
                // .then(editor => {
                //     console.log(editor);
                // })
                .catch(error => {
                    console.error(error);
                });
        </script>

        <!-- Logout Modal-->
        <%- include('../../partials/logout_modal.ejs') %>
            <!-- end of modal -->