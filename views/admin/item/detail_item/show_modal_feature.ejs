<!-- Modal Update feature -->
<div class="modal fade" id="edit-modal-feature" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Feature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/item/update/feature?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control name" name="name" id="name" placeholder="Enter name"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="qty">Quantity</label>
                        <input type="number" class="form-control qty" name="qty" id="qty" placeholder="Enter quantity"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Insert Image</label>
                        <input type="file" class="form-control" name="imageUrl" id="imageUrl">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <input type="hidden" value="<%= itemId %>" class="itemId" name="itemId">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>