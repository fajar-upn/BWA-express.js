<!-- navigation tab in view_item.ejs -->
<div class="tab-pane fade" id="show-activity" aria-labelledby="home-tab">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter name"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="type">Type</label>
                            <input type="text" class="form-control" name="type" id="type" placeholder="Enter type"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Insert Image</label>
                            <input type="file" class="form-control" name="imageUrl">
                        </div>
                        <input type="hidden" value="<%= itemId %>" id="itemId" name="itemId">
                        <button type="submit" class="btn btn-primary">Add Activity</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="data-table-activity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image Url</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<activity.length; i++){ %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= activity[i].name %>
                                        </td>
                                        <td>
                                            <%= activity[i].type %>
                                        </td>
                                        <td>
                                            <img src="https://saber-staycation.herokuapp.com/<%= activity[i].imageUrl %>"
                                                alt="imageUrl" height="70px">
                                        </td>
                                        <td>
                                            <!-- require install methodeOverride and set up in app js -->
                                            <!-- data-'<name>' for JQuery parsing data cannot accept capital -->
                                            <form
                                                action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                                                method="POST">
                                                <a href="javascript:void(0)" type="button"
                                                    class="btn btn-warning btn-circle btn-sm button-update"
                                                    data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>"
                                                    data-type="<%= activity[i].type %>">
                                                    <i class="fas fa-edit"></i></a>
                                                <!-- delete button -->
                                                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>