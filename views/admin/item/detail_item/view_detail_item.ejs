            <%- include('show_modal_activity.ejs') %>

                <script>
                    // #data-table-activity must above #data-table-feature, because javascript will conflict
                    /**
                     * need this code for show table in show_activity.ejs
                     * this code needed because we use id="dataTable" in the show feature
                     */
                    $(document).ready(function () {
                        $('#data-table-activity').DataTable()
                    })

                    /**
                     * JQuery find me id='dataTable', 
                     * when data table clicked find me class="button-update".
                     * lastly get data from show_modal_feature.ejs.
                     * 
                     * data('id') will find data-id="" in the show_feature.ejs
                     */
                    $('#data-table-activity').on('click', '.button-update', function () {
                        let id = $(this).data('id')
                        let name = $(this).data('name')
                        let type = $(this).data('type')

                        $('#edit-modal-activity').modal('show')
                        $('.id').val(id)
                        $('.name').val(name)
                        $('.type').val(type)
                    })

                    /**
                     * JQuery find me id='dataTable', 
                     * when data table clicked find me class="button-update".
                     * lastly get data from show_modal_feature.ejs.
                     * 
                     * data('id') will find data-id="" in the show_feature.ejs
                     */
                    $('#data-table-feature').on('click', '.button-update', function () {
                        let id = $(this).data('id')
                        let name = $(this).data('name')
                        let qty = $(this).data('qty')

                        $('#edit-modal-feature').modal('show')
                        $('.id').val(id)
                        $('.name').val(name)
                        $('.qty').val(qty)
                    })



                    // Ckeditor
                    ClassicEditor
                        .create(document.querySelector('#about'))
                        // .then(editor => {
                        //     console.log(editor);
                        // })
                        .catch(error => {
                            console.error(error);
                        });
                </script>

